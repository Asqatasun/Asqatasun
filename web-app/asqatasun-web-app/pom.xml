    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <tarLongFileMode>gnu</tarLongFileMode>
                    <descriptors>
                        <descriptor>src/main/resources/descriptor.xml</descriptor>
                    </descriptors>
                    <outputDirectory>target</outputDirectory>
                    <finalName>asqatasun-${asqatasunVersion}.i386</finalName>
                    <appendAssemblyId>false</appendAssemblyId>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id> <!-- this is used for inheritance merges -->
                        <phase>package</phase> <!-- append to the packaging phase. -->
                        <goals>
                            <goal>assembly</goal> <!-- goals == mojos -->
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>native2ascii-maven-plugin</artifactId>
                <version>2.0.1</version>
           <!-- <version>${native2ascii-maven-plugin.version}</version> -->
                <executions>
                    <execution>
                        <id>native2ascii-utf8-properties</id>
                        <goals>
                            <goal>resources</goal>
                        </goals>
                        <phase>process-resources</phase><!-- default -->
                        <configuration>
                            <encoding>UTF8</encoding>
                      <!--  <encoding>${project.build.sourceEncoding}</encoding> --> <!-- default -->
                            <srcDir>src/main/resources/i18n</srcDir>
                            <includes>
                                <include>**/*.properties</include>
                           <!-- <include>**/*_utf8*.properties</include> -->
                            </includes>
                         </configuration>
                     </execution>
                 </executions>
             </plugin>
             <plugin>
                 <groupId>net.alchim31.maven</groupId>
                 <artifactId>yuicompressor-maven-plugin</artifactId>
                 <executions>
                     <execution>
                         <goals>
                             <goal>compress</goal>
                         </goals>
                     </execution>
                 </executions>
                 <configuration>
                     <excludes>
                         <exclude>**/*min.js</exclude>
                         <exclude>**/*.css</exclude>
                     </excludes>
                     <failOnWarning>false</failOnWarning>
                 </configuration>
             </plugin>
         </plugins>
         <finalName>asqatasun-web-app-${asqatasunVersion}</finalName>
     </build>
     <profiles>
         <profile>
             <id>asqatasun</id>
             <properties>
                 <sonar.language>accessibility</sonar.language>
             </properties>
         </profile>
         <profile>
             <activation>
                 <!-- the "activation" command offer the ability to run this profile only if "property" is set
                 See http://maven.apache.org/guides/introduction/introduction-to-profiles.html -->
                <property>
                    <name>qa.deployInt</name>
                    <value>true</value>
                </property>
            </activation>
        </profile>
    </profiles>

<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.asqatasun</groupId>
        <artifactId>testing-tools</artifactId>
        <version>4.1.0-SNAPSHOT</version>
    </parent>
    <artifactId>tgol-test-kbaccess-campaign</artifactId>
    <name>tgol-test-kbaccess-campaign</name>
    <build>
        <plugins>
            <plugin>
                <groupId>${asqatasunGroupId}</groupId>
                <artifactId>asqatasun-maven-kbcsv-plugin</artifactId>
                <version>${testingToolsVersion}</version>
                <executions>
                    <execution>
                        <id>generate-csv</id>
                        <phase>generate-test-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <inCsv>src/test/resources/test-lists/Aw21-test-list.txt</inCsv>
                    <outCsv>target/LIST-kbaccess-urls.txt</outCsv>
                </configuration>
            </plugin>
            <plugin>
                <groupId>${asqatasunGroupId}</groupId>
                <artifactId>asqatasun-maven-testgenerator-plugin</artifactId>
                <version>${testingToolsVersion}</version>
                <executions>
                    <execution>
                        <id>generate-tests</id>
                        <phase>generate-test-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <template>src/test/resources/templates/template.java.tpl</template>
                    <dataFile>target/LIST-kbaccess-urls.txt</dataFile>
                    <delimiter>;</delimiter>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>${asqatasunGroupId}</groupId>
            <artifactId>asqatasun-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>${asqatasunGroupId}</groupId>
            <artifactId>tgol-testing-tools</artifactId>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>

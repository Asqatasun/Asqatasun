<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.opens</groupId>
        <artifactId>testing-tools</artifactId>
        <version>3.0.0-beta5</version>
    </parent>
    <artifactId>tgol-test-krash-offline</artifactId>
    <name>tgol-test-krash-offline</name>
    <url>http://www.tanaguru.org</url>
    <build>
        <plugins>
            <plugin>
                <groupId>${testingToolsGroupId}</groupId>
                <artifactId>tanaguru-maven-testgenerator-plugin</artifactId>
                <version>${testingToolsVersion}</version>
                <executions>
                    <execution>
                        <id>generate-tests</id>
                        <phase>generate-test-sources</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <template>src/test/resources/templates/template.java.tpl</template>
                    <dataFile>src/test/resources/url-lists/LIST-repos.kbaccess.org-all-sites.txt</dataFile>
                    <delimiter>;</delimiter>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>${engineGroupId}</groupId>
            <artifactId>tanaguru-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>${testingToolsGroupId}</groupId>
            <artifactId>tgol-testing-tools</artifactId>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

    <!-- data presentation factories -->
    
    <bean id="createContractCommandFactory" class="org.opens.tgol.command.factory.CreateContractCommandFactory" factory-method="getInstance"/>
    
    <bean id="createUserCommandFactory" class="org.opens.tgol.command.factory.CreateUserCommandFactory" factory-method="getInstance"/>
    
    <bean id="auditSetUpCommandFactory" class="org.opens.tgol.command.factory.AuditSetUpCommandFactory" factory-method="getInstance"/>
    
    <bean id="auditResultSortCommandFactory" class="org.opens.tgol.command.factory.AuditResultSortCommandFactory" factory-method="getInstance"/>
    
    <bean id="changeTestWeightCommandFactory" class="org.opens.tgol.command.factory.ChangeTestWeightCommandFactory" factory-method="getInstance"/>

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="auditResultSortCommandFactory"/>
        </property>
        <property name="targetMethod">
            <value>setThemeKey</value>
        </property>
        <property name="arguments">
            <value>result.theme</value>
        </property>
    </bean>

    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="auditSetUpCommandFactory"/>
        </property>
        <property name="targetMethod">
            <value>setParameterDataService</value>
        </property>
        <property name="arguments">
            <ref bean="parameterDataServiceDecorator"/>
        </property>
    </bean>
    
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="createUserCommandFactory"/>
        </property>
        <property name="targetMethod">
            <value>setRoleDataService</value>
        </property>
        <property name="arguments">
            <ref bean="roleDataService"/>
        </property>
    </bean>
    
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="createContractCommandFactory"/>
        </property>
        <property name="targetMethod">
            <value>setReferentialDataService</value>
        </property>
        <property name="arguments">
            <ref bean="referentialDataService"/>
        </property>
    </bean>
    
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="createContractCommandFactory"/>
        </property>
        <property name="targetMethod">
            <value>setFunctionalityDataService</value>
        </property>
        <property name="arguments">
            <ref bean="functionalityDataService"/>
        </property>
    </bean>
    
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="createContractCommandFactory"/>
        </property>
        <property name="targetMethod">
            <value>setOptionNameList</value>
        </property>
        <property name="arguments">
            <list>
                <value>ACT_LIMITATION</value>
                <value>MAX_DOCUMENTS</value>
                <value>DOMAIN</value>
                <value>DEPTH</value>
                <value>MAX_DURATION</value>
                <value>EXCLUSION_REGEXP</value>
                <value>NB_OF_AUDIT_TO_DISPLAY</value>
            </list>
        </property>
    </bean>
    
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="createContractCommandFactory"/>
        </property>
        <property name="targetMethod">
            <value>setOptionDataService</value>
        </property>
        <property name="arguments">
            <ref bean="optionDataService"/>
        </property>
    </bean>
    
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="createContractCommandFactory"/>
        </property>
        <property name="targetMethod">
            <value>setOptionElementDataService</value>
        </property>
        <property name="arguments">
            <ref bean="optionElementDataService"/>
        </property>
    </bean>
    
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="changeTestWeightCommandFactory"/>
        </property>
        <property name="targetMethod">
            <value>setOptionElementDataService</value>
        </property>
        <property name="arguments">
            <ref bean="optionElementDataService"/>
        </property>
    </bean>
    
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="changeTestWeightCommandFactory"/>
        </property>
        <property name="targetMethod">
            <value>setOptionDataService</value>
        </property>
        <property name="arguments">
            <ref bean="optionDataService"/>
        </property>
    </bean>
    
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="targetObject">
            <ref local="changeTestWeightCommandFactory"/>
        </property>
        <property name="targetMethod">
            <value>setUserDataService</value>
        </property>
        <property name="arguments">
            <ref bean="userDataService"/>
        </property>
    </bean>

</beans>
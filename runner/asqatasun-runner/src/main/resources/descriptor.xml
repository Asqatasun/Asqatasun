<!--tanaguru-cli-->
<assembly xmlns="http://maven.apache.org/plugins/maven-resources-plugin/resources/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-resources-plugin/resources/1.1.0 http://maven.apache.org/xsd/resources-1.1.0.xsd">
    <formats>
        <format>tar.gz</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${basedir}/../../</directory>
            <includes>
                <include>README.md</include>
                <include>CHANGELOG.txt</include>
                <include>LICENSE</include>
            </includes>
            <fileMode>644</fileMode>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/bin</directory>
            <includes>
                <include>*.sh</include>
            </includes>
            <fileMode>755</fileMode>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/conf/context</directory>
            <includes>
                <include>*.xml</include>
                <include>asqatasun.conf</include>
                <include>**/*</include>
            </includes>
            <fileMode>666</fileMode>
            <outputDirectory>/conf/context</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../engine/asqatasun-resources/src/main/resources/conf/context/crawler</directory>
            <includes>
                <include>*.xml</include>
            </includes>
            <fileMode>666</fileMode>
            <outputDirectory>/conf/context/crawler</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/resources/logs</directory>
            <includes>
                <include>*.properties</include>
            </includes>
            <fileMode>666</fileMode>
            <outputDirectory>/logs</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../engine/asqatasun-resources/src/main/resources/sql</directory>
            <includes>
                <include>tanaguru-10-create-user-and-base.sql</include>
                <include>tanaguru-20-create-tables.sql</include>
                <include>tanaguru-create-tables.psql</include>
                <include>tanaguru-30-insert.sql</include>
                <include>tanaguru-insert.psql</include>
            </includes>
            <fileMode>755</fileMode>
            <outputDirectory>/install/engine/sql</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../rules/rules-resources/src/main/resources/sql</directory>
            <includes>
                <include>10-rules-resources-insert.sql</include>
                <include>10-rules-resources-insert.psql</include>
            </includes>
            <fileMode>755</fileMode>
            <outputDirectory>/install/rules/sql</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../rules/rules-accessiweb2.2/src/main/resources/sql</directory>
            <includes>
                <include>accessiweb2.2-insert.sql</include>
                <include>accessiweb2.2-insert.psql</include>
            </includes>
            <fileMode>755</fileMode>
            <outputDirectory>/install/rules/sql</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../rules/rules-rgaa2.2/src/main/resources/sql</directory>
            <includes>
                <include>rgaa2.2-insert.sql</include>
                <include>rgaa2.2-insert.psql</include>
            </includes>
            <fileMode>755</fileMode>
            <outputDirectory>/install/rules/sql</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../rules/rules-rgaa3.0/src/main/resources/sql</directory>
            <includes>
                <include>rgaa3.0-insert.sql</include>
            </includes>
            <fileMode>755</fileMode>
            <outputDirectory>/install/rules/sql</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/../../rules/rules-seo1.0/src/main/resources/sql</directory>
            <includes>
                <include>seo1.0-insert.sql</include>
            </includes>
            <fileMode>755</fileMode>
            <outputDirectory>/install/rules/sql</outputDirectory>
        </fileSet>
    </fileSets>

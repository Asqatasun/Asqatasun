<?xml version="1.0"?>
<project xmlns:pom="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.asqatasun</groupId>
        <artifactId>rules</artifactId>
        <version>4.0.2</version>
    </parent>
    <artifactId>asqatasun-rules-seo1.0</artifactId>
    <name>rules-seo1.0</name>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/hsql*</exclude>
                        <exclude>**/*.log</exclude>
                        <exclude>**/*.script</exclude>
                        <exclude>*.tmp</exclude>
                        <exclude>sql/**</exclude>
                        <exclude>deploy.sh</exclude>
                        <exclude>descriptor.xml</exclude>
                    </excludes>                    
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skipTests>false</skipTests>
                    <testFailureIgnore>true</testFailureIgnore>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources/</directory>
                <filtering>true</filtering>
                <excludes>
                    <exclude>**/sql/*</exclude>
                </excludes>
            </resource>
        </resources>
        <finalName>asqatasun-rules-seo1.0-${rulesVersion}</finalName>
    </build>
    
    <dependencies>
        <dependency>
            <groupId>${asqatasunGroupId}</groupId>
            <artifactId>asqatasun-rules-commons</artifactId>
        </dependency>
        <dependency>
            <groupId>${asqatasunGroupId}</groupId>
            <artifactId>asqatasun-rules-testing-tools</artifactId>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.6</version>
            <type>jar</type>
        </dependency>
    </dependencies>
</project>

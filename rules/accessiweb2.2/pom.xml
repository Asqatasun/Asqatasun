<?xml version="1.0"?>
<project xmlns:pom="http://maven.apache.org/POM/4.0.0">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.opens</groupId>
        <artifactId>rules</artifactId>
        <version>1.2.0-SNAPSHOT</version>
    </parent>
    <artifactId>tanaguru-accessiweb2.2</artifactId>
    <name>accessiweb2.2</name>
    <build>
        <finalName>accessiweb2.2-${rulesVersion}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skipTests>false</skipTests>
                    <testFailureIgnore>true</testFailureIgnore>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/hsql*</exclude>
                        <exclude>**/*.log</exclude>
                        <exclude>**/*.script</exclude>
                        <exclude>*.tmp</exclude>
                        <exclude>sql/**</exclude>
                        <exclude>deploy.sh</exclude>
                        <exclude>descriptor.xml</exclude>
                    </excludes>                    
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>${rulesGroupId}</groupId>
            <artifactId>tanaguru-rules-commons</artifactId>
        </dependency>
        <dependency>
            <groupId>${testingToolsGroupId}</groupId>
            <artifactId>tanaguru-rules-testing-tools</artifactId>
        </dependency>
    </dependencies>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
</project>
